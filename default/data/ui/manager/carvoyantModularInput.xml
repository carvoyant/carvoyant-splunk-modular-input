<endpoint name="data/inputs/carvoyantModularInput">
  <header>Carvoyant Modular Input</header>
  <elements>
    <element name="name" label="Unique stanza name">
      <view name="list"/>
      <view name="create"/>
      <key name="exampleText">
          Unique name which identifies this data input
      </key>
    </element>
    <element name="interval" label="Collection interval (in seconds)">
      <view name="list"/>
      <view name="edit"/>
      <view name="create"/>
    </element>
    <element name="clientId" label="Client Id">
      <view name="list"/>
      <view name="edit"/>
      <view name="create"/>
    </element>
    <element name="clientSecret" label="Client Secret">
      <view name="list"/>
      <view name="edit"/>
      <view name="create"/>
    </element>
    <element name="token" label="Access Token">
      <view name="list"/>
      <view name="edit"/>
      <view name="create"/>
    </element>
    <element name="refreshToken" label="Refresh Token">
      <view name="list"/>
      <view name="edit"/>
      <view name="create"/>
    </element>
    <element name="expirationDate"/>
    <element name="spl-ctrl_EnableAdvanced" type="checkbox" label="More settings" class="spl-mgr-advanced-switch">
     <view name="edit"/>
     <view name="create"/>
     <onChange>
       <key name="_action">showonly</key>
       <key name="0">NONE</key>
       <key name="1">ALL</key>
       <group_set>
           <group name="advanced"/>
       </group_set>
     </onChange>
     </element>
     <element name="advanced" type="fieldset" class="spl-mgr-advanced-options">
       <view name="edit"/>
       <view name="create"/>
       <elements>
         <element name="hostFields" type="fieldset">
           <key name="legend">Host</key>
           <view name="list"/>
           <view name="edit"/>
           <view name="create"/>
           <elements>
             <element name="host" type="textfield" label="Host">
               <view name="edit"/>
               <view name="create"/>
             </element>
           </elements>
         </element>
         <element name="indexField" type="fieldset">
           <key name="legend">Index</key>
           <view name="list"/>
           <view name="edit"/>
           <view name="create"/>
           <elements>
             <element name="index" type="select" label="Index">
               <view name="list"/>
               <view name="edit"/>
               <view name="create"/>
               <key name="dynamicOptions" type="dict">
                 <key name="keyName">title</key>
                 <key name="keyValue">title</key>
                 <key name="splunkSource">/data/indexes</key>
                 <key name="splunkSourceParams" type="dict">
                   <key name="search">'isInternal=false disabled=false'</key>
                   <key name="count">-1</key>
                 </key>
               </key>
             </element>
         </elements>
       </element>
     </elements>
   </element>
  </elements>
</endpoint>
